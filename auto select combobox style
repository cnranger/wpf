 <ComboBox.Style>
                                <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource TicketComboBoxStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Items.Count}" Value="1">
                                            <Setter Property="SelectedItem" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Items)[0]}"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>


         <Setter Property="SelectedIndex" Value="0"></Setter>
                                   
