

 <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Items.Count}" Value="1"/>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=SelectedIndex}" Value="-1"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="SelectedIndex" Value="0"/>
            </MultiDataTrigger>
        </Style.Triggers>


         <Setter Property="SelectedIndex" Value="0"></Setter>
                                   
